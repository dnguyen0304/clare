{
  "logging": {
    "version": 1,
    "loggers": {
      "clare": {
        "level": "DEBUG",
        "handlers": ["stream", "file"]
      }
    },
    "formatters": {
      "simple": {
        "format": "%(asctime)s.%(msecs)03d [%(levelname)s] %(message)s",
        "datefmt": "%Y-%m-%d %H:%M:%S"
      },
      "json": {
        "format": "{\"timestamp\": \"%(asctime)s.%(msecs)03d\", \"severity_level\": \"%(levelname)s\", \"message\": %(message)s}",
        "datefmt": "%Y-%m-%d %H:%M:%S"
      }
    },
    "handlers": {
      "stream": {
        "class": "logging.StreamHandler",
        "level": "DEBUG",
        "formatter": "json"
      },
      "file": {
        "class": "logging.handlers.TimedRotatingFileHandler",
        "level": "DEBUG",
        "filename": "/var/log/clare/clare_application.log",
        "when": "midnight",
        "encoding": "utf-8",
        "formatter": "json"
      }
    }
  },
  "scraper": {
    "directory_path": "/home/ubuntu/Downloads/",
    "strategy": {
      "timeout": 5.0
    },
    "retry_policy": {
      "stop_strategy": {
        "maximum_duration": 3600.0
      },
      "wait_strategy": {
        "wait_time": 180.0
      }
    },
    "confirm_retry_policy": {
      "stop_strategy": {
        "maximum_duration": 3.0
      },
      "wait_strategy": {
        "wait_time": 1.0
      }
    },
    "logger_name": "clare"
  }
}
